{
    "version": "2.0.0",
        "options": {
        "cwd": "${workspaceFolder}/build"   // 项目顶层目录
            },
            "tasks": [
        {
            "type": "shell",
            "label": "cmake",	 // 任务名
            "command":"cmake",	 // 任务指令
            "args": [".."]	// 指令所需参数（cmake ..）
            },

    {
        "label": "make",	// 任务名
            "group": {
            "kind": "build",
                "isDefault": true
                },
                "command":"make",	// 任务指令
                "args": []
                },

            {
                "label": "Build",
                // 按列出的顺序执行任务依赖
                "dependsOrder": "sequence",
                "dependsOn":[
                "cmake",		// label名
                "make"			// 同上
                ]
                },
        ]
    }